<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Compose -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">#212121</item>
        <item name="android:windowBackground">#212121</item>
    </style>

    <style name="Theme.CustomisedSplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#0B1C2D</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
</resources>